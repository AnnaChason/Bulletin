<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".StudentInfoForm">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Name"
                app:layout_constraintBottom_toTopOf="@+id/nameET"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/nameET"
                android:layout_width="210dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:hint="Enter name..."
                android:inputType="text"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Year"
                app:layout_constraintBottom_toTopOf="@+id/yearRG"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/maleFemaleRG" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="45dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:text="Age"
                app:layout_constraintBottom_toTopOf="@+id/ageET"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/yearRG" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="195dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Extra status (check if applies)"
                app:layout_constraintBottom_toTopOf="@+id/InternationalCB"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ageET"
                app:layout_constraintVertical_chainStyle="spread" />

            <CheckBox
                android:id="@+id/InternationalCB"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:text="International"
                app:layout_constraintBottom_toTopOf="@+id/missionaryKidCB"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintVertical_chainStyle="spread" />

            <CheckBox
                android:id="@+id/missionaryKidCB"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:text="Missionary Kid"
                app:layout_constraintBottom_toTopOf="@+id/thirdCultureCB"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/InternationalCB" />

            <CheckBox
                android:id="@+id/thirdCultureCB"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:text="Third Culture"
                app:layout_constraintBottom_toTopOf="@+id/pastorKidCB"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/missionaryKidCB" />

            <CheckBox
                android:id="@+id/pastorKidCB"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:text="Pastor Kid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thirdCultureCB" />

            <Button
                android:id="@+id/ConfirmationButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginStart="100dp"
                android:layout_marginBottom="16dp"
                android:text="Confirm Details"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pastorKidCB"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/ageET"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:hint="Enter age..."
                android:inputType="text"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <RadioGroup
                android:id="@+id/yearRG"
                android:layout_width="343dp"
                android:layout_height="243dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <RadioButton
                    android:id="@+id/freshmenRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Freshmen" />

                <RadioButton
                    android:id="@+id/sophomoreRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sophomore" />

                <RadioButton
                    android:id="@+id/juniorRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Junior" />

                <RadioButton
                    android:id="@+id/seniorRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Senior" />

                <RadioButton
                    android:id="@+id/gradRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grad" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="61dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Gender"
                app:layout_constraintBottom_toTopOf="@+id/maleFemaleRG"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameET" />

            <RadioGroup
                android:id="@+id/maleFemaleRG"
                android:layout_width="277dp"
                android:layout_height="96dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6">

                <RadioButton
                    android:id="@+id/maleRB"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/femaleRB"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Female" />
            </RadioGroup>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>