<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/light_green"
    tools:context=".Organizations.OrganizationProfilePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@color/light_green">

            <TextView
                android:id="@+id/orgNameTV"
                android:layout_width="246dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/orgDescTV"
                android:layout_width="307dp"
                android:layout_height="44dp"
                android:text="TextView"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orgNameTV"
                app:layout_constraintVertical_bias="0.166" />

            <Button
                android:id="@+id/backBtn"
                android:layout_width="98dp"
                android:layout_height="52dp"
                android:backgroundTint="@color/white"
                android:text="Back"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/orgNameTV"
                app:layout_constraintEnd_toStartOf="@+id/orgNameTV"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/multiPurposeBtn"
                android:layout_width="172dp"
                android:layout_height="46dp"
                android:backgroundTint="#F0ECEC"
                android:text="Follow"
                android:textColor="#2E2727"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orgDescTV" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orgProfileRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="6" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/btmNavBarOP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>