<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/light_orange">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/light_blue"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/zoomButton"
                android:layout_width="192dp"
                android:layout_height="297dp"
                android:backgroundTint="@color/light_blue"
                android:hint="goawayerror"
                android:text=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.545" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintBottom_toBottomOf="@+id/eventPosterView"
                app:layout_constraintEnd_toEndOf="@+id/eventPosterView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/zoomButton"
                app:layout_constraintVertical_bias="0.31"
                app:srcCompat="@drawable/flyerbackgroundthing" />


            <ImageView
                android:id="@+id/eventPosterView"
                android:layout_width="200dp"
                android:layout_height="300dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/img" />


            <TextView
                android:id="@+id/locationVT"
                android:layout_width="92dp"
                android:layout_height="22dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="6dp"
                android:text="Location"
                app:layout_constraintBottom_toTopOf="@+id/descriptionVT"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.716"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orgNameBtn" />

            <TextView
                android:id="@+id/dateVT"
                android:layout_width="83dp"
                android:layout_height="17dp"
                android:layout_marginTop="13dp"
                android:text="Date"
                app:layout_constraintBottom_toTopOf="@+id/locationVT"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.694"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orgNameBtn"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/eventNameVT"
                android:layout_width="179dp"
                android:layout_height="22dp"
                android:layout_marginTop="16dp"
                android:text="EventName"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toEndOf="@+id/eventPosterView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/descriptionVT"
                android:layout_width="166dp"
                android:layout_height="55dp"
                android:layout_marginTop="104dp"
                android:text="Description"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toEndOf="@+id/eventPosterView"
                app:layout_constraintTop_toBottomOf="@+id/eventNameVT" />

            <TextView
                android:id="@+id/numAttendingVT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="16dp"
                android:text="0 people attending"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionVT" />

            <TextView
                android:id="@+id/categoryTV"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="category"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toEndOf="@+id/eventPosterView"
                app:layout_constraintTop_toBottomOf="@+id/descriptionVT"
                app:layout_constraintVertical_bias="0.144" />

            <Button
                android:id="@+id/orgNameBtn"
                android:layout_width="176dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/medium_blue"
                android:text="organizationName"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toEndOf="@+id/eventPosterView"
                app:layout_constraintTop_toBottomOf="@+id/eventNameVT" />


            <CheckBox
                android:id="@+id/attendingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/numAttendingVT"
                app:layout_constraintHorizontal_bias="0.44"
                app:layout_constraintStart_toEndOf="@+id/eventPosterView"
                app:layout_constraintTop_toBottomOf="@+id/descriptionVT"
                app:layout_constraintVertical_bias="0.783" />

            <TextView
                android:id="@+id/timeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="28dp"
                android:text="Time"
                app:layout_constraintBottom_toTopOf="@+id/descriptionVT"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.804"
                app:layout_constraintStart_toEndOf="@+id/dateVT"
                app:layout_constraintTop_toBottomOf="@+id/orgNameBtn"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/editBtn"
                android:layout_width="54dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/navy_blue"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/eventNameVT"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/baseline_edit_24" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>