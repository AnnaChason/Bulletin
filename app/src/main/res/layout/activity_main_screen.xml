<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mockups.MainScreen">

    <Button
        android:id="@+id/toApprovBtn"
        android:layout_width="168dp"
        android:layout_height="89dp"
        android:text="To flier approval"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toFlyerBtn"
        android:layout_width="166dp"
        android:layout_height="104dp"
        android:text="To flyer view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688" />

    <Button
        android:id="@+id/toOrganizationApprovalBtn"
        android:layout_width="208dp"
        android:layout_height="94dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="22dp"
        android:text="To Organization Approval"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/toApprovBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toHomeBtn"
        android:layout_width="132dp"
        android:layout_height="65dp"
        android:text="To home screen"
        app:layout_constraintBottom_toTopOf="@+id/toOrganizationApprovalBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509" />
</androidx.constraintlayout.widget.ConstraintLayout>